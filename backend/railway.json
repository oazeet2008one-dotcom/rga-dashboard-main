{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node dist/src/main.js",
    "healthcheckPath": "/health",
    "port": 3000,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacks": {
    "buildCommand": "npm install && npx prisma generate && npm run build",
    "installCommand": "npm install",
    "startCommand": "node dist/src/main.js"
  }
}