{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && npm install && npx prisma generate && npm run build"
  },
  "deploy": {
    "startCommand": "cd backend && node dist/src/main.js",
    "port": 3000,
    "healthcheckPath": "/health/liveness",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  },
  "nixpacks": {
    "providers": [
      "node"
    ],
    "nodeVersion": "20"
  }
}